{
    "name": "Enhanced Steam, an IsThereAnyDeal fork",
    "version": "0.9.2",
    "description": "Continues to Enhance the Steam Experience",
    "icons": {
      "128": "img/es_128.png",
      "96": "img/es_96.png",
      "48": "img/es_48.png",
      "32": "img/es_32.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{1be309c5-3e4f-4b99-927d-bb500eb4fa88}",
            "strict_min_version": "52.0"
        }
    },
    "manifest_version": 2,
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "permissions": [
        "storage",
        "*://*.steampowered.com/*",
        "*://steamcommunity.com/*",
        "*://*.isthereanydeal.com/"
    ],
    "web_accessible_resources": [
        "img/*.png",
        "img/*.gif",
        "img/*.jpg",
        "img/*.svg",
        "css/*.css",
        "options.html",
        "changelog_new.html",
        "img/*/*.png",
        "img/profile_styles/*/header.jpg",
        "img/profile_styles/*/showcase.png",
        "img/profile_styles/*/style.css",
        "img/profile_styles/*/preview.png",
        "localization/*/strings.json"
    ],
    "homepage_url": "https://es.isthereanydeal.com/",
    "content_scripts": [
        {
            "matches": [
                "*://*.steampowered.com/*"
            ],
            "exclude_matches": [
                "*://store.steampowered.com/dynamicstore/*",
                "*://store.steampowered.com/checkout/*",
                "*://store.steampowered.com/widget/*",
                "*://store.steampowered.com/login/*",
                "*://store.steampowered.com/join/*",
                "*://store.steampowered.com/api/*"
            ],
            "js": [
                "js/config.js",
                "js/common.js",
                "js/store.js"
            ],
            "css": [
                "css/enhancedsteam.css",
                "css/enhancedsteam-firefox.css",
                "css/es_flags.css",
                "css/es_flags-firefox.css"
            ]
        },
        {
            "matches": [
                "*://steamcommunity.com/*"
            ],
            "exclude_matches": [
                "*://steamcommunity.com/login/*",
                "*://steamcommunity.com/tradeoffer"
            ],
            "js": [
                "js/config.js",
                "js/common.js",
                "js/community.js"
            ],
            "css": [
                "css/enhancedsteam.css",
                "css/enhancedsteam-firefox.css",
                "css/es_flags.css",
                "css/es_flags-firefox.css"
            ]
        },
        {
            "matches": [
                "*://steamcommunity.com/id/*",
                "*://steamcommunity.com/profiles/*"
            ],
            "css": [
                "css/es_sites_links.css",
                "css/es_sites_links-firefox.css"
            ]
        },
        {
            "matches": [
                "*://store.steampowered.com/"
            ],
            "css": [
                "css/store.steampowered.com/store_front.css"
            ]
        }
    ]
}
