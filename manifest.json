{
    "name": "Augmented Steam",
    "version": "0.9.3",
    "description": "Augments your Steam Experience",
    "icons": {
      "128": "img/as_128.png",
      "96": "img/as_96.png",
      "48": "img/as_48.png",
      "32": "img/as_32.png"
    },
    "manifest_version": 2,
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    },
    "permissions": [
        "storage",
        "*://*.steampowered.com/*",
        "*://steamcommunity.com/*",
        "*://*.isthereanydeal.com/"
    ],
    "web_accessible_resources": [
        "img/*.png",
        "img/*.gif",
        "img/*.jpg",
        "img/*.svg",
        "css/*.css",
        "options.html",
        "changelog_new.html",
        "img/*/*.png",
        "img/profile_styles/*/header.jpg",
        "img/profile_styles/*/showcase.png",
        "img/profile_styles/*/style.css",
        "img/profile_styles/*/preview.png",
        "localization/*/strings.json"
    ],
    "homepage_url": "https://es.isthereanydeal.com/",
    "content_scripts": [
        {
            "matches": [
                "*://*.steampowered.com/*"
            ],
            "exclude_matches": [
                "*://store.steampowered.com/dynamicstore/*",
                "*://store.steampowered.com/checkout/*",
                "*://store.steampowered.com/widget/*",
                "*://store.steampowered.com/login/*",
                "*://store.steampowered.com/join/*",
                "*://store.steampowered.com/api/*"
            ],
            "js": [
                "js/config.js",
                "js/common.js",
                "js/store.js"
            ],
            "css": [
                "css/augmentedsteam.css",
                "css/as_flags.css"
            ]
        },
        {
            "matches": [
                "*://steamcommunity.com/*"
            ],
            "exclude_matches": [
                "*://steamcommunity.com/login/*",
                "*://steamcommunity.com/tradeoffer/*"
            ],
            "js": [
                "js/config.js",
                "js/common.js",
                "js/community.js"
            ],
            "css": [
                "css/augmentedsteam.css",
                "css/as_flags.css"
            ]
        },
        {
            "matches": [
                "*://steamcommunity.com/id/*",
                "*://steamcommunity.com/profiles/*"
            ],
            "css": [
                "css/as_sites_links.css"
            ]
        },
        {
          "matches": [
            "*://steamcommunity.com/tradeoffer/*"
          ],
          "js": [
            "js/config.js",
            "js/common.js",
            "js/tradeoffer.js"
          ],
          "css": [
            "css/community/tradeoffer.css"
          ]
        },
        {
            "matches": [
                "*://store.steampowered.com/"
            ],
            "css": [
                "css/store/store_front.css"
            ]
        }
    ]
}
